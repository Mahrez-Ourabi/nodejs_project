<!-- edit.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Reservation</title>
  </head>
  <body>
    <h1>Edit Reservation</h1>
    <form
      action="/reservations/<%= reservation._id %>?_method=PUT"
      method="POST"
    >
      <label for="meetingRoomId">Meeting Room ID:</label>
      <input
        type="text"
        id="meetingRoomId"
        name="meetingRoomId"
        value="<%= reservation.meetingRoomId %>"
        required
      /><br />
      <label for="startTime">Start Time:</label>
      <input
        type="datetime-local"
        id="startTime"
        name="startTime"
        value="<%= reservation.startTime %>"
        required
      /><br />
      <label for="endTime">End Time:</label>
      <input
        type="datetime-local"
        id="endTime"
        name="endTime"
        value="<%= reservation.endTime %>"
        required
      /><br />
      <button type="submit">Update Reservation</button>
    </form>
  </body>
</html>
