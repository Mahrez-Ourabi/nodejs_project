<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Meeting Room</title>
    <script>
      const existingToken = localStorage.getItem("token")
      if (!existingToken) {
        window.location.href = "/auth/login"
      }
    </script>
  </head>
  <body>
    <h1>Create Meeting Room</h1>
    <form action="/meeting-room" method="POST">
      <label for="name">Name:</label><br />
      <input type="text" id="name" name="name" /><br />
      <label for="capacity">Capacity:</label><br />
      <input type="text" id="capacity" name="capacity" /><br />
      <label for="equipment">Equipment:</label><br />
      <input type="text" id="equipment" name="equipment" /><br />
      <input type="hidden" id="token" name="token" value="token" />
      <button type="submit">Create</button>
    </form>
    <% if (typeof error !== 'undefined') { %>
    <p>Error: <%= error %></p>
    <% }%>
    <script>
      const token = localStorage.getItem("token")
      document.getElementById("token").value = token
    </script>
  </body>
</html>
